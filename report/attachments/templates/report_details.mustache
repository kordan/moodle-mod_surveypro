{{!
    @template surveyproreport_attachments/report_details

    Paragraph of the detail page for attachment report.

    Example context (json):
    {
        "elementid": "user_45",
        "paragraphlabel": "User name",
        "paragraphcontent": "Foo Bar"
    }
}}
<div id="paragraph_{{{elementid}}}" class="form-group row fitem">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
        <span class="d-inline-block">
            {{{paragraphlabel}}}
        </span>
    </div>
    <div class="col-md-9 form-inline align-items-start felement" data-fieldtype="static">
        <div class="form-control-static">
            <div class="indent-0 label_static">
                {{{paragraphcontent}}}
            </div>
        </div>
    </div>
</div>
